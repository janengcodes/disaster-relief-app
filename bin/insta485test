#!/bin/bash
#
# insta485test
#
# tests code
#
# Andrew DeOrio <awdeorio@umich.edu>
# add the  chmod +x insta485test to make it executable


# Stop on errors, print commands
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

# # Clean
# rm -rf insta485/html

# # Build
# insta485generator insta485

# # Serve
# cd insta485/html

#stops on errors 
if [ ! -e "var/insta485.sqlite3" ]; then
    echo "Error: can't find database var/insta485.sqlite3"
    echo "Try: ./bin/insta485db create"
    exit 1
fi

pycodestyle insta485
pydocstyle insta485
pylint insta485
pytest -v tests
npx eslint --ext jsx insta485/js/
npx prettier --check insta485/js
npx prettier --write insta485/js


flask --app insta485 --debug run --host 0.0.0.0 --port 8000